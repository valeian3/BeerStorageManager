<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_background_home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/home_tvIdUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/orders_tvMarginTopOrder"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/orders_tvTextColorOrder"/>
    <Button
        android:id="@+id/home_btnIdLogout"
        android:layout_width="@dimen/home_btnWidthLogout"
        android:layout_height="@dimen/home_btnHeightLogout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/home_btnMarginBottomLogout"
        android:background="@drawable/custom_button"
        android:text="@string/home_btnTextLogout"
        android:textColor="@color/home_btnTextColorHome"/>
    <Button
        android:id="@+id/home_btnIdPresets"
        android:layout_width="@dimen/home_btnWidthPresets"
        android:layout_height="@dimen/home_btnHeightPresets"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/home_btnMarginStartPresets"
        android:layout_marginBottom="@dimen/home_btnMarginBottomPresets"
        android:background="@drawable/custom_button"
        android:text="@string/home_btnTextPresets"
        android:textColor="@color/home_btnTextColorHome" />

    <Button
        android:id="@+id/home_btnIdOrders"
        android:layout_width="@dimen/home_btnWidthOrders"
        android:layout_height="@dimen/home_btnHeightOrders"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/home_btnMarginEndOrders"
        android:layout_marginBottom="@dimen/home_btnMarginBottomOrders"
        android:background="@drawable/custom_button"
        android:text="@string/home_btnTextOrders"
        android:textColor="@color/home_btnTextColorHome" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_menu"/>
</RelativeLayout>