<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/orders_tvIdBeerName"
        android:layout_width="@dimen/orders_tvWidthBeerName"
        android:layout_height="@dimen/orders_tvHeightBeerName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/orders_tvMarginStartBeerName"
        android:gravity="center"
        android:textSize="@dimen/orders_tvSizeBeerName" />

    <TextView
        android:id="@+id/orders_tvIdBeerAmount"
        android:layout_width="@dimen/orders_tvWidthBeerAmount"
        android:layout_height="@dimen/orders_tvHeightBeerAmount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/orders_tvMarginEndBeerAmount"
        android:gravity="center"
        android:textSize="@dimen/orders_tvSizeBeerAmount" />

</RelativeLayout>